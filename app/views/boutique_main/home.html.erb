<!-- begin clothing_main dialog-->
<section id="clothing_main_dialog" data-role="dialog">
    <header data-role="header">
        <h1 id="header">Please select option</h1>
    </header>
    <div data-role="content" class="content">
        <a href="#" data-role="button" data-theme="b" id="new_btn">New</a>
