<!-- sale page-->
<section id="sale" data-role="page">
    <header data-role="header">
        <a href="#main" data-role="button" data-theme="b" class="ui-btn-left">Home</a>
        <h1 id="header">Sale</h1>
    </header>
    <div data-role="content" class="content">       
        <div data-role="fieldcontain" id="update_div">
            <label for="sale_id" class="select">Sale ID:</label>
            <input type="text" id="sale_id" name="sale_id" readonly>
        </div>
        <ol data-role="listview" id="items" data-inset="true">
        </ol>   
        <a href="#" id="add_btn" data-role="button" data-theme="b" class="ui-btn-right">Add</a>
        <form action="example.html" method="get">
            <div data-role="fieldcontain">
                <label for="date" class="select">Date:</label>
                <input name="date" id="date" type="date" data-role="datebox"
                       data-options='{"mode": "calbox", "lockInput": false}' data-theme="b">
            </div> 
            <div data-role="fieldcontain">
                <label for="payment" class="select">Payment:</label>
                <select name="payment" id="payment">
                    <option value="cash">Cash</option>
                    <option value="credit">Credit Card</option>
                </select>
            </div>
            <div data-role="fieldcontain">
                <label for="remark">Remark:</label>
                <input type="text" id="remark" name="remark">
            </div>
        </form> 
    </div> 
    <footer data-role="footer">
        <a href="#" data-role="button" data-theme="b" class="ui-btn-left" id="submit_btn">Submit</a>
        <h1 id="total">Total: $0</h1>
    </footer>
    
</section>

