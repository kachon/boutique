<!-- begin clothing page-->
<section id="clothing" data-role="page">
    <header data-role="header">
        <a href="#main" data-role="button" data-theme="b" class="ui-btn-left">Home</a>
        <h1 id="header">Clothing</h1>
    </header>
    <div data-role="content" class="content">       
        <div data-role="fieldcontain" id="update_div">
            <label for="clothing_id" class="select">Id:</label>
            <input type="text" id="clothing_id" name="clothing_id" readonly>
        </div>
        <div data-role="fieldcontain">
            <label for="date" class="select">Date:</label>
            <input name="date" id="date" type="date" data-role="datebox"
                   data-options='{"mode": "calbox", "lockInput": false}' data-theme="b">
        </div> 
        <div data-role="fieldcontain">
            <label for="desc">Desc:</label>
            <input type="text" id="desc" name="desc">
        </div>
        <div data-role="fieldcontain">
            <label for="unit_price">Unit Price:</label>
            <input type="text" id="unit_price" name="unit_price">
        </div>
    </div> 
    <footer data-role="footer">
        <a href="#" data-role="button" data-theme="b" id="submit_btn">Submit</a>
    </footer>
</section>
<!-- end clothing page -->

<!-- begin clothing_id dialog-->
<section id="clothing_id_dialog" data-role="dialog">
    <header data-role="header">
        <h1 id="header">Enter clothing id</h1>
    </header>
    <div data-role="content" class="content">
        <form id="form">
            <div data-role="fieldcontain">
                <label for="clothing_id">Id:</label>       
                <input name="Id" id="clothing_id" data-theme="b">
            </div>
            <a href="#" data-role="button" data-theme="b" class="ui-btn-left" id="ok_btn">OK</a>
        </form>
    </div>
</section>
<!-- end clothing_id dialog -->

<!-- begin clothing info page-->
<section id="clothing_info" data-role="page">
