<section id="sale_dialog" data-role="dialog">
    <header data-role="header">
        <h1>Input Dialog</h1>
    </header>
    <div data-role="content" class="content">
        <form id="input_form">
            <div data-role="fieldcontain">
                <label for="clothing_id">Clothing ID:</label>
                <input type="text" id="clothing_id" name="clothing_id" required>
            </div>
            <div data-role="fieldcontain">
                <label for="unit_cost">Unit Cost:</label>
                <input type="text" id="unit_cost" name="unit_cost" value="0.0" required pattern="[0-9]+[.]*[0-9]*" >
            </div>            
            <a href="#" data-role="button" data-theme="b" class="ui-btn-left" id="ok_btn">OK</a>
        </form>
    </div>
    
