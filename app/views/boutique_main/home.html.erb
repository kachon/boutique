    </header>
    <div data-role="content" class="content">       
        <div data-role="fieldcontain">
            <label class="select">Id: </label>
            <label class="select cls_display_value" id="clothing_id">
        </div>
        <div data-role="fieldcontain">
            <label class="select">Date: </label>
            <label class="select cls_display_value" id="date">
        </div>
        <div data-role="fieldcontain">
            <label class="select">Desc: </label>
            <label class="select cls_display_value" id="desc">
        </div>
        <div data-role="fieldcontain">
            <label class="select">Unit Price: </label>
            <label class="select cls_display_value" id="unit_price">
        </div>
    </div> 
</section>
